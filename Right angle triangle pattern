#upper right angle triangle
n=input("enter the value = ") # user input 
for i in range(1,n): #n loop statement
    print("* " *i) #print * upper triangle pattern

#lower right angle triangle
n=input("enter the value = ") # user input 
for i in range(1,n): #n loop statement
    print("* " *(n-i)) #print * lower triangle pattern
